<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/preftitle_notify">
		<CheckBoxPreference
			android:id="@+id/led"
			android:key="led"
			android:title="@string/led_title"
			android:summaryOn="@string/led_summOn"
			android:summaryOff="@string/led_summOff"
			android:defaultValue="true"
		/>
		<CheckBoxPreference
			android:id="@+id/vibration"
			android:key="vibration"
			android:title="@string/vibr_title"
			android:summaryOff="@string/vibr_summOff"
			android:summaryOn="@string/vibr_summOn"
		/>
		<RingtonePreference
			android:title="@string/ringtone_title"
			android:ringtoneType="notification"
			android:showDefault="true"
			android:showSilent="true"
			android:summary="@string/ringtone_summ"
		android:id="@+id/ringtone" android:key="ringtone"/><RingtonePreference
			android:ringtoneType="notification"
			android:showDefault="true"
			android:showSilent="true"
			android:id="@+id/ringtone" android:key="ringtone_available" android:title="@string/ringtone_avail_title" android:summary="@string/ringtone_avail_summ"/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/preftitle_boot">
		<CheckBoxPreference
			android:id="@+id/bootstart"
			android:key="bootstart"
			android:title="@string/boot_title"
			android:summaryOff="@string/boot_summOff"
			android:summaryOn="@string/boot_summOn"
		/>
		<CheckBoxPreference
			android:id="@+id/showOffline"
			android:key="showOffline"
			android:title="@string/showOffline_title"
			android:summaryOn="@string/showOffline_summ_on"
			android:summaryOff="@string/showOffline_summ_off"
			android:defaultValue="true"
		/>	
		<CheckBoxPreference
			android:id="@+id/foregroundService"
			android:key="foregroundService"
			android:title="@string/foregroundService_title"
			android:summaryOn="@string/foregroundService_summ_on"
			android:summaryOff="@string/foregroundService_summ_off"
			android:defaultValue="true"
		/>	
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/preftitle_debug">
		<CheckBoxPreference
			android:id="@+id/smackdebug"
			android:key="smackdebug"
			android:title="@string/smackdebug_title"
			android:summaryOn="@string/smackdebug_summ_on"
			android:summaryOff="@string/smackdebug_summ_off"
			android:defaultValue="false"
		/>
		
		<CheckBoxPreference
			android:id="@+id/reportcrash"
			android:key="reportcrash"
			android:title="@string/reportcrash_title"
			android:summaryOn="@string/reportcrash_summ_on"
			android:summaryOff="@string/reportcrash_summ_off"
			android:defaultValue="false"
		/>	
	</PreferenceCategory>
